<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.nallen.divsionselector.app.DivisionFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Division"
                android:id="@+id/division_title"
                android:textSize="32dp"
                android:textColor="@color/colorAccent"
                android:gravity="center" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Spinner
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/assign_team_selector"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Assign Team"
                android:id="@+id/assign_button"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_gravity="center" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Spinner
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/unassign_team_selector"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Unassign Team"
                android:id="@+id/unassign_button"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_gravity="center" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Scan QR Code"
                android:id="@+id/scan_button"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
